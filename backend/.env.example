VERSION=0.1.0

# Application environment (development, staging, production, etc.)
ENV=development

# Database connection URL
# Example: postgres://user:password@localhost:5432/prein_dev?sslmode=disable
DATABASE_URL=postgres://user:password@localhost:5432/dbname?sslmode=disable

# -------------------------
# Google OAuth 2.0 config
# -------------------------
# Register an OAuth client in Google Cloud Console and set the consent screen.
# Set these values in your local `.env` before running the backend.
# Example client IDs look like: 1234567890-abcdefg.apps.googleusercontent.com
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# The OAuth redirect URL must match the one registered in Google Cloud Console.
# Typical local dev value: http://localhost:8080/auth/google/callback
OAUTH_REDIRECT_URL=http://localhost:8080/auth/google/callback

# -------------------------
# Session / Secrets
# -------------------------
# Session secret used to sign/encrypt session cookies. Use a long random string.
SESSION_SECRET=replace-with-a-long-random-secret
